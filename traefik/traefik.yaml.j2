# Static configuration for Hass.io Traefik add-on
# DO NOT MODIFY - Managed by run.sh init script

global:
  checkNewVersion: false
  sendAnonymousUsage: false

entryPoints:
  web:
    address: ":80"
  web-secure:
    address: ":443"
{%- if forwarded_headers_insecure %}
    forwardedHeaders:
      insecure: true
{%- endif %}

api:
  dashboard: true
  insecure: true

{% if letsencrypt.enabled -%}
certificatesResolvers:
  le:
    acme:
      email: "{{ letsencrypt.email }}"
      storage: "/ssl/traefik/acme.json"
  {%- if letsencrypt.challenge_type is not defined or letsencrypt.challenge_type == 'tlsChallenge' %}
      tlsChallenge: {}
  {%- elif letsencrypt.challenge_type == 'httpChallenge' %}
      httpChallenge:
        entryPoint: web
  {%- elif letsencrypt.challenge_type == 'dnsChallenge' %}
      dnsChallenge:
        provider: {{ letsencrypt.provider }}
    {%- if letsencrypt.delayBeforeCheck is defined %}
        delayBeforeCheck: {{ letsencrypt.delayBeforeCheck }}
    {%- endif %}
      {% if letsencrypt.resolvers %}
        resolvers:
        {% for resolver in letsencrypt.resolvers -%}
          - "{{ resolver }}"
        {%- endfor %}
      {%- endif %}
  {%- endif %}
{%- endif %}

providers:
  file:
    directory: "{{ dynamic_configuration_path }}"

{% if access_logs -%}
accessLog: {}
{%- endif %}

log:
  level: {{ log_level }}
